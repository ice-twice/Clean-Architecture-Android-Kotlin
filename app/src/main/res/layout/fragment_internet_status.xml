<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_text_example"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp8"
            android:text="@string/lorem_ipsum" />
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/dp16"
        android:clickable="true"
        app:layout_behavior="com.architecture.clean.presentation.component.view.FloatingActionButtonBehavior"
        app:srcCompat="@android:drawable/ic_input_add"
        android:focusable="true" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/holo_orange_light"
        android:padding="@dimen/dp8"
        android:text="@string/this_is_an_example_of_using_the_coordinator_layout_this_tip_and_the_floating_button_can_change_own_position_according_to_the_scroll"
        app:layout_behavior="com.architecture.clean.presentation.component.view.TextViewDescriptionBehavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>